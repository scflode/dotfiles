#!/usr/bin/env bash

dot_dir="${HOME}/.dotfiles"

echo -e "Linking dotfiles"

echo -e "\tLinking Vim config"
mkdir -p ~/.vim
mkdir -p ~/.config/nvim
rcup config/nvim

echo -e "\tLinking Kitty config"
rcup -v config/kitty/kitty.conf

echo -e "\tLinking tmux config"
rcup tmux.conf

echo -e "\tLinking Git config"
rcup gitconfig
rcup gitignore_global

echo -e "\tLinking asdf config"
rcup asdf
