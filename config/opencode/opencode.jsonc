{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "theme": "catppuccin",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "opencode-copilot-usage-toast@latest"
  ],
  "small_model": "github-copilot/gpt-5-mini",
  "agent": {
    "compaction": {
      "model": "github-copilot/gpt-5-mini"
    }
  },
  "mcp": {
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
      "environment": {},
      "enabled": true
    }
  }
}
