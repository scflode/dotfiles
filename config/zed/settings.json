// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Catppuccin Macchiato",
  "scrollbar": {
    "show": "system"
  },
  "context_servers": {
    
  },
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "dock": "bottom"
  },
  "language_models": {
    "openai": {
      "api_url": "http://localhost:11434/v1"
    }
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte"
  },
  "buffer_font_family": "VictorMono Nerd Font Mono",
  "buffer_font_features": { "calt": true, "clig": true, "liga": true },
  "vim_mode": true,
  "buffer_font_size": 15,
  "buffer_line_height": { "custom": 1.8 },
  "buffer_font_weight": 600,
  "project_panel": {
    "dock": "right"
  },
  "languages": {
    "Svelte": {
      "prettier": {
        "singleQuote": true
      }
    }
  },
  "language_overrides": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "node": {
    "path": "~/.local/share/mise/shims/node",
    "npm_path": "~/.local/share/mise/shims/npm"
  }
}
