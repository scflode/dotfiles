#!/usr/bin/env sh

# Common aliases

#
# Listings
#

# Detect which `ls` flavor is in use
if ls --color >/dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -laF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# System tools
alias cp='cp -v'
alias mv='mv -v'
alias ln='ln -v'
alias rm='rm -v'

# Intuitive map function
# For example, to list all directories that contain a certain file:
# find . -name .gitattributes | map dirname
alias map="xargs -n1"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# VIM
alias v='NVIM_APPNAME=LazyVim nvim'

# tmux
alias tls='tmux list-sessions'
alias tn='tmux new -s'
alias ta='tmux at -t'

# Networking
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias lanip="ipconfig getifaddr en0"
alias wlanip="ipconfig getifaddr en1"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"
# SSH helpers
alias compile-ssh-config='mv ~/.ssh/config ~/.ssh/config_bak && echo "# Do NOT edit this file. Use the config.d files." > ~/.ssh/config && cat ~/.ssh/config.d/* >> ~/.ssh/config'

# Common tool aliases

# ZSH
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"

# dotfiles aliases
alias update="${HOME}/.dotfiles/update"
alias dotfiles='cd ~/.dotfiles && v .; -'

# Neovim
alias nvim-kickstart='NVIM_APPNAME="nvim-kickstart" nvim'
